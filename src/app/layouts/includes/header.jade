block header
	header
		.titlebar#titlebar
			.contenedor.clearfix
				h3
					a(class="left" title="GEO BON" href="http://geobon.org" target="_blank") GEO BON
				if username
					ul.nav.nav-tabs.pull-right
						li.dropdown(role="presentation")
							a.dropdown-toggle(data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false")
								.user-icon-container.img-circle
									svg.user-icon
										use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#user-icon")
								span.caret
							ul.dropdown-menu
								li
									a(href="/account/profile")
										span.glyphicon.glyphicon-user(aria-hidden="true")
										| #{username}
								if admin
									li
											a(href="/account/dashboard")
												span.glyphicon.glyphicon-cog(aria-hidden="true")
												| #{__('nav.admin')}
								li.divider(role="separator")
								li
									a(href="/logout")
										span.glyphicon.glyphicon-log-out(aria-hidden="true")
										| #{__('nav.logout')}
				h3.pull-right #{__("header.title")}
		nav#mainnav
			a.hamburguesa &#9776
			.contenedor.clearfix
				ul.menu_principal
					li.left
						a(class="icon icon-ico-32" href="/auth/local/login" data-toggle="tooltip" title="#{__('nav.login')}")
							label #{__('nav.login')}
					li.left
						a(class="icon icon-ico-33" href="#section4" data-toggle="tooltip" title="#{__('nav.forum')}")
							label #{__('nav.forum')}
					
					li.right.spacer
						a(class="icon icon-ico-37" href="mailto:info@geobon.org" data-toggle="tooltip" title="#{__('nav.contact')}")
							label #{__('nav.contact')}
					li.right
						a(class="icon icon-ico-48" href="#section3" data-toggle="tooltip" title="#{__('nav.tools')}")
							label #{__('nav.tools')}
					li.right
						a(class="icon icon-ico-35" href="#section2" data-toggle="tooltip" title="#{__('nav.filters')}")
							label #{__('nav.filters')}
					li.right
						a(class="icon icon-ico-34" href="#section1" data-toggle="tooltip" title="#{__('nav.main')}")
							label #{__('nav.main')}
					li.right
						ul.navlang
							each language in locales
								if language === currentLocale
									li.right.active
										a(title="#{language}" href="/language/#{language}") #{language}
								else
									li.right
										a(title="#{language}" href="/language/#{language}") #{language}